<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/demo_state_second"
        android:orientation="vertical">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_profile"
            android:layout_width="@dimen/margin_100dp"
            android:layout_height="@dimen/margin_100dp"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:shapeAppearanceOverlay="@style/circleImageView"/>
        <TextView
            android:id="@+id/name"
            android:text="@string/name"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/mobile"
            android:text="@string/mobile_number"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/email"
            android:text="@string/mobile_number"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/black20per"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black20per"/>

    <LinearLayout
        android:id="@+id/ll_profile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:padding="@dimen/dp_10"
        android:gravity="center">
        <ImageView
            android:src="@drawable/person"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"/>
        <TextView
            android:text="Profile"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black20per"/>
    <LinearLayout
        android:id="@+id/ll_project1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:padding="@dimen/dp_10"
        android:gravity="center">
        <ImageView
            android:src="@drawable/ic_action"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"/>
        <TextView
            android:text="Add Project"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black20per"/>
    <LinearLayout
        android:id="@+id/ll_synch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:padding="@dimen/dp_10"
        android:gravity="center">
        <ImageView
            android:src="@drawable/ic_filter"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"/>
        <TextView
            android:text="Sync Data"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black20per"/>
    <LinearLayout
        android:id="@+id/ll_download_map"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:padding="@dimen/dp_10"
        android:gravity="center">
        <ImageView
            android:src="@drawable/location"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"/>
        <TextView
            android:text="Download Map"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black20per"/>
    <LinearLayout
        android:id="@+id/ll_change_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:padding="@dimen/dp_10"
        android:gravity="center">
        <ImageView
            android:src="@drawable/lock"
            app:tint="@color/black"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"/>
        <TextView
            android:text="Change password"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black20per"/>

    <LinearLayout
        android:id="@+id/ll_logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:padding="@dimen/dp_10"
        android:gravity="center">
        <ImageView
            android:src="@drawable/ic_logout"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"/>
        <TextView
            android:text="Logout"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black20per"/>
    <TextView
        android:id="@+id/tv_version"
        android:gravity="bottom|center"
        android:padding="@dimen/dp_10"
        android:text="version"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>