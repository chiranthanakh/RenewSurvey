<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_edit_text_lable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_15_dp"
            android:layout_marginStart="@dimen/margin_15_dp"/>
        <EditText
            android:id="@+id/edittext"
            android:background="@drawable/spinner_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_15_dp"
            android:layout_marginStart="@dimen/margin_15_dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_sp_lable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_15_dp"
            android:layout_marginStart="@dimen/margin_15_dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_15_dp"
            android:layout_marginStart="@dimen/margin_15_dp"
            android:background="@drawable/spinner_background">
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_multiselect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_multiselect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_15_dp"
            android:layout_marginStart="@dimen/margin_15_dp"/>
        <TextView
            android:id="@+id/multiselect"
            android:background="@drawable/spinner_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_15_dp"
            android:layout_marginStart="@dimen/margin_15_dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_15_dp"
            android:layout_marginStart="@dimen/margin_15_dp"/>
       <RadioGroup
           android:id="@+id/rg_radio"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginEnd="@dimen/margin_15_dp"
           android:layout_marginStart="@dimen/margin_15_dp">

       </RadioGroup>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/ll_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical">
         <TextView
             android:id="@+id/txt_range"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginEnd="@dimen/margin_15_dp"
             android:layout_marginStart="@dimen/margin_15_dp"/>
         <com.google.android.material.slider.RangeSlider
             android:id="@+id/range_slider_price"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:stepSize="1"
             android:valueFrom="0"
             android:valueTo="100"
             android:layout_marginEnd="@dimen/margin_15_dp"
             android:layout_marginStart="@dimen/margin_15_dp"/>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_file_lable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_15_dp"
            android:layout_marginStart="@dimen/margin_15_dp"/>
        <TextView
            android:id="@+id/tv_file"
            android:text="Attach file"
            android:drawablePadding="@dimen/dp_10"
            android:drawableStart="@drawable/ic_file_attach"
            android:gravity="center_vertical"
            android:background="@drawable/spinner_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_15_dp"
            android:layout_marginStart="@dimen/margin_15_dp"/>
    </LinearLayout>


</LinearLayout>